<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h1>Você não tem autorização</h1>
                </NotAuthorized>
                <Authorizing>
                    <p role="alert">Autorizando...</p>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <p role="alert">Desculpe, não encontramos a página que você está procurando.</p>
        </NotFound>
    </Router>    
</CascadingAuthenticationState>
